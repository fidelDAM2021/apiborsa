{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{{ include ('menu/menu.html.twig') }}
<div class="container-fluid">
    {% if pager %}
        <h4>Ofertes</h4>
        <table class='table table-sm'>
        <thead>
        {% for oferta in pager %}
            {% if loop.first %}
                <tr>
                <th scope='col'>Data</th>
                <th scope='col'>Empresa</th>
                <th scope='col'>Sector</th>
                <th scope='col'>Estat</th>
                </tr>
            {% endif %}
            <tr>
            <td>{{ oferta.data | date("d/m/Y") }}</td>
            <td>{{ oferta.NIFempresa.nom }}</td>
            <td>{{ oferta.NIFempresa.idsector.nomsector }}</td>
            <td>{% if oferta.estat is same as (true) %}
                    Activada
            {% elseif value is same as (false) %}
                    Desactivada
            {% endif %}</td>
            <td><a class="btn btn-success btn-sm" href="{{ path('app_searchbyid_oferta',{value:oferta.id}) }}" role="button">Veure</a>
            <a class="btn btn-danger btn-sm" href="{{ path('app_delete_oferta',{id:oferta.id}) }}" role="button">Borrar</a>
            <a class="btn btn-warning btn-sm" href="{{ path('app_update_oferta',{id:oferta.id}) }}" role="button">Modificar</a>         
            </tr>
        {% endfor %}
        </table>
        {{ pagerfanta(pager) }}
    {% else %}
        <h3>No hi ha ofertes</h3>
    {% endif %}
    <a href='{{ path("app_search_ofertes") }}'>Tornar a ofertes</a>
    <br/><br/>
    <a class="btn btn-primary" href="{{ path('app_new_oferta') }}" role="button">Nova oferta</a>
</div>
{% endblock %}

