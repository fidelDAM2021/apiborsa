{% extends 'base.html.twig' %}

{% block title %}Oferta{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% form_theme form 'bootstrap_5_layout.html.twig' %}
<div class="container-fluid">
    <h3>{{ title }}</h3>
    {{ form_start(form) }}
    <div class="form-group row">
        <div class="col-sm-3">
        {{ form_row(form.NIFempresa) }}
        </div>
        <div class="col-sm-3">
        {{ form_row(form.data) }}
        </div>
        <div class="col-sm-2">
        {{ form_row(form.estat) }}
        </div>
        <div class="col-sm-4">
        {{ form_row(form.urloferta) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
        {{ form_row(form.textoferta) }}
        </div>
        <div class="col-sm-4">
        {{ form_row(form.experiencia) }}
        </div>
        <div class="col-sm-4">
        {{ form_row(form.idiomes) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3">
        {{ form_row(form.altres) }}
        </div>
        <div class="col-sm-2">
        {{ form_row(form.cicle) }}
        </div>
         <div class="col-sm-2">
        {{ form_end(form) }}
        </div>
    </div>

</div>
{% endblock %}
