{% extends 'base.html.twig' %}

{% block title %}Alumnat{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% form_theme form 'bootstrap_5_layout.html.twig' %}
<div class="container-fluid">
    <h3>{{ title }}</h3>
    {{ form_start(form) }}
    <div class="form-group row">
        <div class="col-sm-4">
        {{ form_row(form.nomalumne) }}
        </div>
        <div class="col-sm-4">
        {{ form_row(form.cognoms) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
        {{ form_row(form.poblacio) }}
        </div>
        <div class="col-sm-3">
        {{ form_row(form.telefon) }}
        </div>
        <div class="col-sm-5">
        {{ form_row(form.email) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
        {{ form_row(form.transport) }}
        </div>
        <div class="col-sm-2">
        {{ form_row(form.actiu) }}
        </div>
        <div class="col-sm-2">
        {{ form_row(form.pdf) }}
        </div>
        <div class="col-sm-3">
        {{ form_row(form.cicle) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
